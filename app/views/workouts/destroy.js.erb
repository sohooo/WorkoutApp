/* insert a notification */
$("#notifications").html('<p class="flash notice"><%= escape_javascript(flash.delete(:notice)) %></p>');

/* fade out notification after 5 seconds */
$("p.notice").delay(5000).fadeOut("slow");

/* fade out deleted workout */
$("#workout_<%= @workout.id %>").fadeOut();

/* @status: replace the count of workouts */
$("#workout_count").html("<%= stat_workout_counter %>");

/* @status: replace last workout status */
$("#last_workout").html("<%= stat_last_workout %>");
