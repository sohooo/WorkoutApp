/* insert a notice between last workout and workout form */
$("#workout-notice").html('<div class="flash notice"><%= escape_javascript(flash.delete(:notice)) %></div>');

/* @status: replace the count of workouts */
$("#workout_count").html("<%= stat_workout_counter %>");

/* @status: replace last workout status */
$("#last_workout").html("<%= stat_last_workout %>");

/* Add the new workout to the bottom of the workouts list */
$("#workouts").prepend("<%= escape_javascript(render(@workout)) %>");

/* Reset the workout form */
$("#new_workout")[0].reset();

/* focus new exercise form */
$("input#exercise_name").focus();
